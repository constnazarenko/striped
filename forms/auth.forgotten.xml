<?xml version="1.0" encoding="UTF-8"?>
<form method="post" action="" title="" label="AUTH_FRG_TITLE" ajax="none">
    <fieldgroup name="main">
        <field name="usernameoremail" type="text" required="1">
            <patterns>
                <pattern preset="length" message="frm_err_str_range"><item>4</item><item>120</item></pattern>
                <pattern preset="regexp" message="au_err_uname_wrong"><item>/(^[a-z0-9_.+-]+@(?:[a-z0-9_-]+\.)+[a-z]{2,4}$)|(^[^0-9][a-z0-9-]*$)/i</item></pattern>
            </patterns>
            <title>AUTH_FRG_USERNAME_EMAIL</title>
        </field>
        <field type="buttonset">
            <title />
            <buttons>
                <button type="submit" name="submit" title="frm_submit" />
            </buttons>
        </field>
    </fieldgroup>
</form>